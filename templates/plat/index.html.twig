{% extends 'base.html.twig' %}

{% block title %}Plats{% endblock %}

{% block body %}

    <div class="container my-5">
        <div class="row">
            <h3>Tout nos plats</h3>

            {% for plat in liste %}
                <div class="col-4">
                    <div class="card">

                        <div class="card-body">
                            <h3 class="card-title">{{ plat.libelle }}</h3>
                            <a href="#" class="btn"><img src="{{ asset('assets/img/plat/')  ~ plat.image }}" alt="{{ plat.libelle }}" width="200px"></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}
