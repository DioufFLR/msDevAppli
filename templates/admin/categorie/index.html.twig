{% extends "base.html.twig" %}

{% block title %}Administration{% endblock %}

{% block body %}

    <div class="container my-5">
        <div class="row">
            {% include "_partials/_adminnav.html.twig" %}
            <main class="col-9 border border-light bg-white p-2">
                <h1>Liste des cat√©gories</h1>
                <table class="table">
                    <thead>
                    <tr class="bg-danger-subtle">
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Image</th>
                        <th>Active</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for categorie in categorie %}
                        <tr>
                            <td>{{ categorie.id }}</td>
                            <td>{{ categorie.libelle }}</td>
                            <td><img src="{{ asset('assets/img/categorie/')  ~ categorie.image }}" alt="{{ categorie.libelle }}" width="150px" height="150px"></td>
                            <td>{{ categorie.active }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </div>

{% endblock %}