{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}

    <div class="container my-5">
        <div class="row">
            <h3>Catégories</h3>

            {% for categorie in liste %}
                <div class="col-4">
                    <div class="card">

                        <div class="card-body">
                            <h3 class="card-title">{{ categorie.libelle }}</h3>
                            <a href="{{ path('app_categorie_detail', { id:  categorie.id}) }}" class="btn"><img src="{{ asset('assets/img/categorie/')  ~ categorie.image }}" alt="{{ categorie.libelle }}" width="200px"></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>


{% endblock %}
