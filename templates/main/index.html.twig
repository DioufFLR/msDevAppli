{% extends 'base.html.twig' %}

{% block body %}

    <main class="container">
        <section class="row">

            <div class="col-12 mt-5 mb-5">
                <h2>Restaurant spécialités du monde</h2>
                <p>Des saveurs uniques de tous le continents</p>
            </div>

            {% for liste in categorie %}
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">{{ category.libelle }}</h3>
                            <a href="" class="btn"><img src="{{ asset('assets/img/category/')  ~ category.image }}" alt="{{ category.libelle }}" width="200px"></a>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </section>
    </main>

{% endblock %}
